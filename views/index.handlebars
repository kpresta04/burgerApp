<h1>Eat-Da-Burger</h1>
<img src="/assets/images/burgerLarge.png" id="burgerImg">


<div class="container">

  <div id="not-devoured">

    <h2>Eat Me!</h2>

    <ul>
      {{#each cats}}
      {{#unless devoured}}
      {{> cats/cat-block sleep=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div id="devoured">
    <h2>Already Eaten</h2>

    <ul>
      {{#each cats}}
      {{#if devoured}}
      {{> cats/cat-block sleep=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div id="addBurger">


  <form class="create-form">
    <h2>Add a Burger</h2>

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>
